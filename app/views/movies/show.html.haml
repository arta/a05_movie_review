.panel.panel-default
  .panel-body
    .row
      .col-md-4
        =image_tag @movie.image.url( :medium )
        .table-responsive
          %table.table
            %tbody
              %tr
                %td.strong Title:
                %td= @movie.title
              %tr
                %td.strong Description:
                %td= @movie.description
              %tr
                %td.strong Length:
                %td= @movie.length
              %tr
                %td.strong Director:
                %td= @movie.director
              %tr
                %td.strong Rating:
                %td= @movie.rating
          =link_to 'Write a Review', new_movie_review_path( @movie )
      .col-md-7.col-md-offset-1
        %h1.review_title= @movie.title
        %p= @movie.description
        -if @movie.reviews.blank?
          %h3 No reviews just yet, would you like to add the first!
          =link_to 'Write a review', new_movie_review_path( @movie ), class:'btn btn-danger'
        -else
          =render @movie.reviews

    =link_to 'Edit', edit_movie_path(@movie)
    |
    =link_to 'Back', movies_path
